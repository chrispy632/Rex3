@model List<Rex3.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h2>Users - Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().CountryCode)
            </th>
            <th>
                Role
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserRoles.FirstOrDefault().Role.Title)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-Userid="@item.UserId">Edit</a> |
                    <a asp-action="Details" asp-route-Userid="@item.UserId">Details</a> |
                    <a asp-action="Delete" asp-route-Userid="@item.UserId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>